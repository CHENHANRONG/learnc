{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build learnc",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "try_concurrency.cpp",
                "-isystem",
                "/usr/include",
                "-pthread",
                "~/workspace/cpp/libgtest.a",
                "-o",
                "a.out"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "",
            "dependsOn": "build learnc",
            "args": ["./a.out"]
        }
    ]
}